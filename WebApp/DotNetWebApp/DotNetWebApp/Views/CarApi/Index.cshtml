@model IEnumerable<DotNetWebApp.Models.CarOverall>
@{
	ViewData["Title"] = "Index";
}


<h1>Our Car Models</h1>


<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.CarBrand)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CarModel)
			</th>
			<th>

			</th>
		</tr>
	</thead>
	<tbody id="car_table_body">
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.CarBrand)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CarModel)
				</td>
				<td>
					@{
						var parms = new Dictionary<string, string>
						{
							{ "CarBrand", item.CarBrand },
							{ "CarModel", item.CarModel }
						};
					}
					<a asp-action="ShowOffers" asp-all-route-data="parms">Show Offers</a>
				</td>
			</tr>
		}
	</tbody>
</table>


